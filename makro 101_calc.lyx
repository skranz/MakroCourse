\begin_layout Section
Labor market, y and inflation
\end_layout

\begin_layout Standard
Anteil der Arbeitnehmer am Erl√∂s
\begin_inset Formula 
\[
P=(1+\mu)\left(W/\tau\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
ws_{P}=\left(W/\tau\right)/P=\frac{1}{1+\mu}
\]

\end_inset


\end_layout

\begin_layout Standard
We have
\begin_inset Formula 
\begin{eqnarray*}
P_{t} & = & EP_{t}(1+\mu)ws(Y_{t}/\tau)\\
P_{t} & = & EP_{t}(1+\psi(Y_{t}))
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\pi_{t} & = & \frac{P_{t}-P_{t-1}}{P_{t-1}}\\
 & = & \frac{EP_{t}-P_{t-1}}{P_{t-1}}+\frac{P_{t}-EP_{t}}{P_{t-1}}\\
 & = & \frac{EP_{t}-P_{t-1}}{P_{t-1}}+\frac{(1+\psi(Y_{t}))EP_{t}-EP_{t}}{P_{t-1}}\\
 & = & E\pi_{t}+\psi(Y_{t})\frac{EP_{t}}{P_{t-1}}\\
 & = & E\pi_{t}+(1+E\pi_{t})\psi(Y_{t})
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
Alternative Berechnung:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
(1+\pi_{t}) & = & (1+E\pi_{t})\cdot(1+\mu)\cdot ws(Y_{t}/\tau)\\
 & = & (1+E\pi_{t})\cdot ws/ws_{P}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\pi_{t}=(1+E\pi_{t})\cdot ws/ws_{P}-1
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\pi_{t} & = & (1+E\pi_{t})\cdot ws/ws_{P}-1\\
 & = & E\pi_{t}(ws/ws_{P})+\psi\\
 & = & E\pi_{t}(\psi+1)+\psi
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $\psi(Y)=(1+\mu)\cdot ws(Y_{t}/\tau)-1$
\end_inset

 we can then write it
\begin_inset Formula 
\[
\pi_{t}=\psi(Y_{t})+\left(\psi(Y_{t})-1\right)E\pi_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
or 
\begin_inset Formula 
\begin{eqnarray*}
\pi_{t} & = & E\pi_{t}+(1+E\pi_{t})\psi(Y_{t})\\
\pi_{t} & = & E\pi_{t}+(1+E\pi_{t})\frac{ws(Y_{t}/\tau)-ws_{P}}{ws_{P}}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
We can write
\begin_inset Formula 
\[
\psi=\frac{ws(Y_{t}/\tau)}{ws_{P}}-1
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\pi_{t} & = & \frac{P_{t}-P_{t-1}}{P_{t-1}}\Leftrightarrow\\
\pi_{t} & = & E\pi_{t}+(1+E\pi_{t})\psi(Y_{t})
\end{eqnarray*}

\end_inset


\end_layout

